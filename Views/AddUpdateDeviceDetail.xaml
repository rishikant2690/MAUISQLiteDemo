<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteDemo.Views.AddUpdateDeviceDetail"
             Title="Add / Update Device Details">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="SlateGray" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Margin="10" Spacing="15">

        <VerticalStackLayout>
            <Label Text="Device Name" />
            <Entry Text="{Binding DeviceDetail.DeviceName}" Placeholder="Device Name" />
            <BoxView HeightRequest="0.8" Color="Gray" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Location"  />
            <Entry Text="{Binding DeviceDetail.Location}" Placeholder="Location" />
            <BoxView HeightRequest="0.8" Color="Gray" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Comment" />
            <Entry  Text="{Binding DeviceDetail.Comment}" Placeholder="Comment" />
            <BoxView HeightRequest="0.8" Color="Gray" />
        </VerticalStackLayout>

        <Button Text="Save" Command="{Binding AddUpdateDeviceCommand}"/>
    </StackLayout>
</ContentPage>
